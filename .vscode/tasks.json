{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ project",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "windows": {
                "command": "mingw32-make"
            },
            "linux": {
                "command": "make"
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            },
        },
        {
            "label": "Build & run C++ project",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "windows": {
                "command": "mingw32-make; ./main"
            },
            "linux": {
                "command": "make && ./main"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
        }
    ]
}