{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ project",
            "type": "shell",
            "windows": {
                "command": "mingw32-make"
            },
            "linux": {
                "command": "cd build && make"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build & run C++ project",
            "type": "shell",
            "windows": {
                "options": {
                    "cwd": "${workspaceFolder}"
                },
                "command": "mingw32-make; ./main"
            },
            "linux": {
                "command": "make && ./main"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
        },
        {
            "label": "Build CMake",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "cd bin && cmake .."
        }
    ]
}